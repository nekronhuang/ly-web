doctype html
html(ng-app='smartBadge' id='ng-app' ng-cloak)
    head
        meta(http-equiv='content-type' content='text/html; charset=UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge;chrome=1')
        meta(name='keywords' content='科技,NFC,联云,斯墨,信息')
        meta(name='description' content='领先的会展信息服务')
        meta(name='author' content='synorme,上海斯墨信息科技有限公司')
        title 联云
        link(rel='shortcut icon' href='/img/favicon.ico')
        link(rel='stylesheet' type='text/css' href='/css/bootstrap.min.css')
        link(rel='stylesheet' type='text/css' href='/css/ng-grid.min.css')
        link(rel='stylesheet' type='text/css' href='/css/ng-tags-input.css')
        link(rel='stylesheet' type='text/css' href='/css/theme.css')
        <!--[if lt IE 8]>
        script(type="text/javascript" src="/js/json2.js")
        <![endif]-->
        <!--[if lt IE 9]>
        script(type="text/javascript" src="/lib/respond.js")
        <![endif]-->
        script(src='/lib/shim.min.js')
        script(src='/lib/jquery.min.js')
        script(src='/lib/jquery-ui.min.js')
        script(src='/lib/angular-1.2.7.js')
        script(src='/lib/ng-grid.js')
        script(src='/lib/ng-tags-input.js')
        script(src='/lib/angular-route.min.js')
        script(src='/lib/angular-resource.min.js')
        script(src='/lib/jquery.nicescroll.min.js')
        script(src='/lib/ui-bootstrap.js')
        script(src='/lib/angular-file-upload.js')
        script(src='/lib/sortable.js')
        script(src='/js/app.js')
        script(src='/js/controllers.js')
        script(src='/js/services.js')
        script(src='/js/directives.js')
    body(ng-init='name="#{name}"')
        .navbar.navbar-default.navbar-fixed-top
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='/')
                        span SmartBadge
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li.active.fixed
                            a(href='/contacts') 联系人
                        //- li(ng-class="{active:activePanel==1}")
                        //-     a(href='/expos') 展会
                    ul.nav.navbar-nav.pull-right
                        li.dropdown(dropdown)
                            a.dropdown-toggle(href='#' dropdown-toggle)
                                span.glyphicon.glyphicon-user
                                | {{name}}
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/settings') 设置
                                li.divider
                                li
                                    a(href='#' ng-click='logout()') 登出
        #main
            .sb-sidebar
                ul.sb-component
                    li
                        a(href='/contacts/add' tooltip-placement='right' tooltip='新增联系人')
                            span.glyphicon.glyphicon-list-alt
                    li
                        a(href='#' tooltip-placement='right' tooltip='下载联系人' ng-click='downloadList()')
                            span.glyphicon.glyphicon-download
                    li
                        a(href='/contacts/upload' tooltip-placement='right' tooltip='导入联系人')
                            span.glyphicon.glyphicon-upload
            .sb-container
                .container-fluid(ng-view)