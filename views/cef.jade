    head
        meta(http-equiv='content-type' content='text/html; charset=UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge;chrome=1')
        meta(name='keywords' content='科技,NFC,联云,斯墨,信息')
        meta(name='description' content='领先的会展信息服务')
        meta(name='author' content='synorme,上海斯墨信息科技有限公司')
        title 联云
        link(rel='shortcut icon' href='/img/favicon.ico')
        link(rel='stylesheet' type='text/css' href='/css/bootstrap.min.css')
        link(rel='stylesheet' type='text/css' href='/css/metro.css')
        link(rel='stylesheet' type='text/css' href='/css/list.css')
        script(src='/lib/jquery.min.js')
        script(src='/lib/angular-1.2.7.js')
        script.
            var SB=angular.module('list',[]);
            SB.controller('listCtrl',['$scope',function($scope){
                $scope.activeTab=0;
                $scope.tabs=[
                    {id:0,display:'集成电路/IC'},
                    {id:1,display:'无源元件'},
                    {id:2,display:'分立器件'},
                    {id:3,display:'电源管理'},
                    {id:4,display:'光电器件'},
                    {id:5,display:'无线及射频'},
                ]
                $scope.results=[
                    [
                        {name:'德州仪器（TI）',contact:'蔡凌云',time:'2015-3-12 8:10',mobile:'13900227766',tags:[{name:'放大器',url:'http://www.iceasy.com/list-1-19.html'},{name:'存储器',url:'http://www.iceasy.com/list-1-15.html'}],company:'http://www.iceasy.com/pl/TI',url:['http://www.iceasy.com/list-1-19.html','http://www.iceasy.com/list-1-15.html']},
