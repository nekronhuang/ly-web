                        {name:'国巨公司',contact:'胡承伟',time:'2015-3-12 10:17',mobile:'13651869089',tags:[{name:'其他电阻',url:'http://www.iceasy.com/list-3-29-463.html'},{name:'陶瓷电容',url:'http://www.iceasy.com/list-3-28-166.html'}],company:'http://www.iceasy.com/pl/IDT'},
                    ]
                ]
            }]);
    body(ng-controller="listCtrl")
        .container
            .row
                .col-md-12.bhoechie-tab-container
                    .row
                        .col-md-3.bhoechie-tab-menu
                            .list-group
                                a.list-group-item.text-center(href='#' ng-repeat='item in tabs' ng-class='{active:item.id==$parent.activeTab}' ng-click='$parent.activeTab=item.id')
                                    h3.icon-user-4
                                    | {{item.display}}
                        .col-md-9.bhoechie-tab.active
                            ul.list-unstyled
                                li.col-md-4(ng-repeat='item in results[activeTab]')
                                    .panel.panel-primary
                                        .panel-heading
                                                h3.panel-title
                                                    span
                                                    a(ng-href='{{item.company}}' target='_blank') {{item.name}}
                                        .panel-body
                                            strong {{item.contact}}
                                            dl
                                                dt 到访时间:
                                                dd {{item.time}}
                                                br
                                                dt 手机:
                                                dd {{item.mobile}}
                                            div
                                                a.btn.btn-sm.btn-info(ng-repeat='btn in item.tags track by $index' ng-href='{{btn.url}}' target='_blank') {{btn.name}}