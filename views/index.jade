        style(type='text/css').
            #loading-wrap{
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
            #loading-wrap .content{
                position: absolute;
                top:50%;
                left: 50%;
                margin-left: -100px;
                margin-top: -220px;
            }
            #loading-wrap .content .brand{
                width: 140px;
                height: 140px;
                background: #fff;
                margin:0 auto;
                position: relative;
                top: -320px;
                border-radius: 50%;
                padding: 30px;
            }
            #loading-wrap .content .brand img{
                display: block;
                width: 80px;
            }
            #loading-wrap .content .outer-circle{
                background-color: rgba(0,0,0,0);
                border:5px solid rgba(71,157,216,0.9);
                opacity:.9;
                border-right:5px solid rgba(0,0,0,0);
                border-left:5px solid rgba(0,0,0,0);
                border-radius:50%;
                box-shadow: 0 0 35px #2187e7;
                width:180px;
                height:180px;
                margin:0 auto;
                -webkit-animation:spinPulse 1s infinite linear;
            }
            #loading-wrap .content .inner-circle{
                background-color: rgba(0,0,0,0);
                border:5px solid rgba(71,157,216,0.9);
                opacity:.9;
                border-left:5px solid rgba(0,0,0,0);
                border-right:5px solid rgba(0,0,0,0);
                border-radius:50%;
                box-shadow: 0 0 15px #2187e7;
                width:160px;
                height:160px;
                margin:0 auto;
                position:relative;
                top:-170px;
                -webkit-animation:spinoffPulse 1s infinite linear;
            }
            @-webkit-keyframes spinPulse {
                0% { -webkit-transform:rotate(160deg); opacity:0; box-shadow:0 0 1px #2187e7; }
                50% { -webkit-transform:rotate(145deg); opacity:1;}
                100% { -webkit-transform:rotate(-320deg); opacity:0; }
            }
            @-webkit-keyframes spinoffPulse {
                0% { -webkit-transform:rotate(0deg); }
                100% { -webkit-transform:rotate(360deg); }
            }
